<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 navbar-fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ETicketing</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index"><i class="bi bi-film"></i> Home</a>

                    </li>

                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <li class="nav-item">
                            <div class="dropdown">
                                <a class=" dropdown-toggle nav-link" data-bs-toggle="dropdown">
                                    <i class="bi bi-gear"></i>   Management
                                </a>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a class="dropdown-item" asp-controller="MovieCategory" asp-action="Index"><i class="bi bi-ui-checks-grid"></i> Category</a>

                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="CinemaHall" asp-action="Index"><i class="bi bi-camera-reels"></i> Cinemas</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Producer" asp-action="Index"><i class="bi bi-headset"></i> Producer</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Actor" asp-action="Index"><i class="bi bi-person-square"></i> Actor</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Movie" asp-action="Index"><i class="bi bi-camera-video"></i> Movies</a>
                                    </li>
                                </ul>
                            </div>
                        </li>
                    }
                </ul>


                <form class="d-flex" asp-controller="Home" asp-action="Index" >
                    <input class="form-control me-2" type="search" placeholder="by name/category" name="searchString" aria-label="Search">
                    <button class="btn btn-outline-success" type="submit"><i class="bi bi-search"></i></button> &nbsp;
                </form>
                @if(User.Identity.IsAuthenticated)
                {
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="Cart" asp-action="Index">
                            <i class="bi bi-cart4"></i> <span id="cartCount"></span>
                        </a>
                    </li>
                </ul>
                }
                @await Html.PartialAsync("_header")
            </div>
        </div>
    </nav>
</header>