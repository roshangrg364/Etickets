@model ETicketing.ViewModels.User.ChangePasswordVieModel


@{ 
    ViewData["Title"] = "Change Password";
}

<div class="row">
    <div class="col-md-6 offset-3">
        <p>
            <h4>@ViewData["Title"] </h4>
        </p>


        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-controller="Account" asp-action="ChangePassword">
                   @Html.ValidationSummary()
                    <input asp-for="UserId" hidden/>
                    <div class="form-group mt-2">
                        <label asp-for="@Model" class="control-label mt-1">Old Password</label>
                        <input type="password" asp-for="OldPassword" class="form-control" />
                     
                    </div>
                    <div class="form-group mt-2">
                        <label asp-for="NewPassword" class="control-label mt-1">New Password</label>
                        <input type="password" asp-for="NewPassword" class="form-control" />
                      
                    </div>
                     <div class="form-group mt-2">
                        <label asp-for="ConfirmPassword" class="control-label mt-1">Confirm Password</label>
                        <input type="password" asp-for="ConfirmPassword" class="form-control" />
                       
                    </div>
                    
                    <div class="form-group mt-3">
                        <button  class="btn btn-outline-success float-right" type="submit" value="Log in" ><i class="bi bi-layer-forward"></i>ChangePassword</button>
                        <a class="btn btn-outline-secondary" asp-controller="Home" asp-action="Index"><i class="bi bi-backspace"></i>Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>